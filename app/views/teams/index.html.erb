<div class="admin teams index">
  <h1>Seznam týmů</h1>

  <table>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th>Shortcut</th>
      <th>Logo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td><%= team.short_name %></td>
      <td><%= team.shortcut %></td>
      <td><%= team.logo %></td>
      <td><%= link_to 'Show', team %></td>
      <td><%= link_to 'Edit', edit_team_path(team) %></td>
      <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Team', new_team_path %>
</div>