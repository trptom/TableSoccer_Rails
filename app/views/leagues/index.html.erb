<div class="admin leagues index">
  <h1><%= I18n.t('messages.leagues.index.title') %></h1>

  <div class="list">
    <table>
      <tr>
        <th><%= I18n.t('messages.base.name') %></th>
        <th><%= I18n.t('messages.base.short_name') %></th>
        <th><%= I18n.t('messages.base.shortcut') %></th>
        <th><%= I18n.t('messages.base.level') %></th>
        <th><%= I18n.t('messages.base.division') %></th>
        <th><%= I18n.t('messages.base.action') %></th>
      </tr>

    <% @leagues.each do |league| %>
      <tr>
        <td><%= league.name %></td>
        <td><%= league.short_name %></td>
        <td><%= league.shortcut %></td>
        <td><%= league.level %></td>
        <td><%= league.division %></td>
        <td class="btn-group">
          <%= link_to_show nil, league %>
          <%= link_to_edit nil, edit_league_path(league) %>
          <%= link_to_delete nil, league %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>

  <div class="footer btn-group">
    <%= link_to_new nil, new_league_path %>
  </div>
</div>