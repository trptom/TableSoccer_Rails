<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Zápas<br />
    #<%= @game.match.id %>
  </div>
  <div class="field">
    Pořadové číslo hry<br />
    <%= f.select :game_number, 1..11, :selected => @game.game_number %>
  </div>
  <div class="field">
    Typ hry<br />
    <%= f.select :game_type, options_for_select(get_game_type_options, @game.game_type.to_s) %>
  </div>
  <div class="field">
    Skóre domácích<br />
    <%= f.select :score_home, options_for_select([["Neuvedeno", nil], 0, 1, 2], @game.score_home) %>
  </div>
  <div class="field">
    Skóre hostů<br />
    <%= f.select :score_away, options_for_select([["Neuvedeno", nil], 0, 1, 2], @game.score_away) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
