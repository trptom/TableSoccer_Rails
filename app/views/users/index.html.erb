<div class="admin users index">
  <h1>Seznam uživatelů</h1>

  <div class="list">
    <table>
      <tr>
        <th>ID</th>
        <th>Jméno</th>
        <th>Email</th>
        <th>Propojený hráč</th>
        <th>Akce</th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.player ? link_to(get_player_name(user.player), user.player) : "Žádný" %></td>
          <td class="btn-group">
            <%= link_to 'Zobrazit', user, :class => "btn" %>
            <%= link_to 'Editovat', edit_user_path(user), :class => "btn" %>
            <%= link_to 'Smazat', user, method: :delete, data: { confirm: 'Jste si jistý(á)?' }, :class => "btn" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="footer btn-group">
    <%= link_to 'Nový uživatel', new_user_path, :class => "btn" %>
  </div>
</div>