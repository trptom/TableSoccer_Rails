
<%= form_tag user_sessions_path, :method => :post, :class => "form-horizontal" do %>
  <div class="control-group">
    <%= label_tag :username_label, I18n.t("messages.base.login"), :class => "control-label", :for => "username" %>
    <div class="controls">
      <%= text_field_tag :username %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag :password_label, I18n.t("messages.base.password"), :class => "control-label", :for => "password" %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= submit_tag I18n.t("messages.base.log_in"), :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
