<div class="detail">
  <div class="content">
    <div class="line">
      <span><%= I18n.t("messages.base.login") %></span>
      <span><%= @user.username %></span>
    </div>
    
    <div class="line">
      <span><%= I18n.t("messages.base.users_name") %></span>
      <span><%= @user.name %></span>
    </div>
      
    <div class="line">
      <span><%= I18n.t("messages.base.email") %></span>
      <span><%= @user.email %></span>
    </div>
      
    <div class="line">
      <span><%= I18n.t("messages.users.base.connected_player") %></span>
      <span><%= @user.player ? get_player_name(@user.player) : I18n.t("messages.users.show.no_player") %></span>
    </div>
    
    <div class="line">
      <span><%= I18n.t("messages.base.attendance_reminder") %></span>
      <span><%= @user.attendance_reminder > 0 ? @user.attendance_reminder.to_s : I18n.t("messages.base.turned_off") %></span>
    </div>
      
    <div class="line">
      <span><%= I18n.t("messages.base.active") %></span>
      <span><%= I18n.t(@user.activation_state == "active" ? "messages.base._yes" : "messages.base._no") %></span>
    </div>
      
    <div class="line">
      <span><%= I18n.t("messages.base.admin") %></span>
      <span><%= I18n.t(@user.is_admin ? "messages.base._yes" : "messages.base._no") %></span>
    </div>
      
    <div class="line">
      <span><%= I18n.t("messages.base.blocked") %></span>
      <span><%= I18n.t(@user.blocked ? "messages.base._yes" : "messages.base._no") %></span>
    </div>
      
    <div class="line">
      <span><%= I18n.t("messages.base.last_login") %></span>
      <span><%= @user.last_login_at ? I18n.l(@user.last_login_at, :format => :default_with_secs) : "" %></span>
    </div>
      
    <div class="line">
      <span><%= I18n.t("messages.base.last_logout") %></span>
      <span><%= @user.last_logout_at ? I18n.l(@user.last_logout_at, :format => :default_with_secs) : "" %></span>
    </div>
      
    <div class="line">
      <span><%= I18n.t("messages.base.last_activity") %></span>
      <span><%= @user.last_activity_at ? I18n.l(@user.last_activity_at, :format => :default_with_secs) : "" %></span>
    </div>
  </div>
    
  <div class="footer">
    <div class="btn-group">
      <%= link_to I18n.t("messages.base.edit"), edit_user_path(@user), :class => "btn" %>
      <%= link_to I18n.t("messages.base.go_to_list"), users_path, :class => "btn" %>
    </div>
  </div>
</div>
